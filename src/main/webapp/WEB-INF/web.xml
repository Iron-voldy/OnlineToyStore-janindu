<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>OnlineToyStore</display-name>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Listener for application initialization -->
  <listener>
    <listener-class>com.toystore.util.AppContextListener</listener-class>
  </listener>

  <!-- Servlet Mappings -->
  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>com.toystore.servlet.HomeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.toystore.servlet.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.toystore.servlet.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>com.toystore.servlet.ProfileServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SellToyServlet</servlet-name>
    <servlet-class>com.toystore.servlet.SellToyServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SellToyServlet</servlet-name>
    <url-pattern>/sell</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PaymentServlet</servlet-name>
    <servlet-class>com.toystore.servlet.PaymentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PaymentServlet</servlet-name>
    <url-pattern>/payment</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FeedbackServlet</servlet-name>
    <servlet-class>com.toystore.servlet.FeedbackServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FeedbackServlet</servlet-name>
    <url-pattern>/feedback</url-pattern>
  </servlet-mapping>

  <!-- Session Configuration -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>